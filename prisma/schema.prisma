generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Character {
  id           String   @id @default(uuid())
  name         String
  race         String
  title        String
  gender       String   @default("Desconhecido")
  age          Int      @default(0)
  birthday     String   @default("Desconhecido")
  combat_style String   @default("Desconhecido")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("characters")
}
